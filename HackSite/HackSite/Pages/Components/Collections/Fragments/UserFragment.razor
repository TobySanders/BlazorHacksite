@using HackSite.Views
<li class="list-group-item @rowClass" @onclick="OnCheckbox">
    <div class="row">
        <div class="col">
            @UserView.Username
        </div>
        <div class="col">
            <a class="card-link" href="/Users/@UserView.Id">View User</a>
        </div>
    </div>
</li>

@code{
    [Parameter]
    public UserView UserView { get; set; }
    [Parameter]
    public EventCallback<Guid> OnSelected { get; set; }
    [Parameter]
    public EventCallback<Guid> OnDeselected { get; set; }

    private bool isSelected;
    private string rowClass = rowClassDeselcted;

    private const string rowClassSelected = "bg-primary";
    private const string rowClassDeselcted = "bg-secondary";

    public void OnCheckbox()
    {
        isSelected = !isSelected;

        rowClass = isSelected ? rowClassSelected : rowClassDeselcted;

        if (isSelected)
        {
            OnSelected.InvokeAsync(UserView.Id);
        }
        else
        {
            OnDeselected.InvokeAsync(UserView.Id);
        }
    }
}